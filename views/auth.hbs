<link rel="stylesheet" href="/stylesheets/style.css">
<div id="forms" class="container text-center">
  <a id="reg">Register</a> or <a id="log">Login</a>
        {{> Messages}}
    <hr />
<div id="signup">
    <form action="/register" method="post">
    <input type="hidden", name="_csrf", value="{{csrfToken}}">  
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username" required>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" required>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group">
            <label>Password Confirmation</label>
            <input type="password" class="form-control" name="password2" required>
        </div>        

        <button type="submit" id="register" class="btn btn-warning btn-lg">Signup</button>
    </form>
  </div>
  <div id="login" class="clearfix" >
       <form action="/login" method="post">
        <input type="hidden", name="_csrf", value="{{csrfToken}}">  
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
<br />
        <button type="submit" id="signin" class="btn btn-warning"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
    </form>
    <br />
    or
    <br />
    <a href="/auth/twitter"class="btn btn-primary" id="twitter"><i class="fa fa-twitter" aria-hidden="true"></i> Login with twitter</a>
  <br />
     <a id="forgot" href="/forgot" class="pull-right">Forgot password?</a>
  </div>
</div>
