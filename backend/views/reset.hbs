 <link rel="stylesheet" href="/stylesheets/forgot.css">
<div class="container">
<h1 align="center">Reset Password</h1>
{{> Messages}}
 <div align="center">
    <form method="post" >
        <input type="hidden", name="_csrf", value="{{csrfToken}}">  
    <div class="form-group">
    <label for="email">Email address:</label> <br>  
    <input style="color:black" type="email"id="email" name="email" >
  </div>        
     <div class="form-group">
       <label for="password">New password:</label> <br>  
       <input style="color:black" type="password" name="password" minlength="6"oninvalid="this.setCustomValidity('Password must be at least 6 characters')"
    oninput="setCustomValidity('')"/>
     </div>
     <div class="form-group">
       <label for="confirm">Confirm password:</label>   <br>  
       <input style="color:black" type="password" name="confirm"/>
     </div>
 <button class="btn btn-success"type='submit'>Reset Password</button>
</form>
</div>
</div>